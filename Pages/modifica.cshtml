@page
@model WebApp.Pages.modificaModel
@{
}

@if (Model.errorMessage.Length > 0)
{
	<div class="alert alert-warning alert-dismissible faded show" role="alert">
		<strong> @Model.errorMessage</strong>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Chiudi"></button>
	</div>
}

<form method="post">
	<input type="hidden" name="id" value="@Model.dato.id" />

	<div class="row mb-3">
		<label class="col col-sm-3 col-form-label">Nome</label>
		<div>
			<input type="text" name="nome" value="@Model.dato.nome" />
		</div>
	</div>

	<div class="row mb-3">
		<label class="col col-sm-3 col-form-label">Cognome</label>
		<div>
			<input type="text" name="cognome" value="@Model.dato.cognome" />
		</div>
	</div>

	<div class="row mb-3">
		<label class="col col-sm-3 col-form-label">Data di Nascita</label>
		<div>
			<input type="text" name="dataNascita" value="@Model.dato.dataNascita" />
		</div>
	</div>

	<div class="row mb-3">
		<label class="col col-sm-3 col-form-label">Telefono</label>
		<div>
			<input type="text" name="telefono" value="@Model.dato.telefono" />
		</div>
	</div>

	<div>
		<div>
			<button type="submit" class="btn-primary">Modifica</button>
		</div>

		<div>
			<a href="test" class"btn btn-outline-primary" role="button">Annulla</a>
		</div>
	</div>
</form>