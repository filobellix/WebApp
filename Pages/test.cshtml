@page
@model WebApp.Pages.testModel
@{
}

@if(Model.errorMessage.Length > 0)
{
	<div>
		<strong> @Model.errorMessage</strong>
	</div>
}

<div class="center,th,td, tr:hover">

	@* @for(int i = 0; i < 7; i++)
	{
		<h3>@Model.lista[@i]</h3>
	} *@
	
	<table>
		<tr>
			<th>Nome</th>
			<th>Cognome</th>
			<th>Data di Nascita</th>
			<th>Numero di Telefono</th>
		</tr>

		@foreach (var x in @Model.lista)
		{
			<tr>
				<td width= 5%>@x.nome</td>
				<td width = 5%>@x.cognome</td>
				<td width= 5%>@x.dataNascita</td>
				<td width= 5%>@x.telefono</td>
				<td width=5%>
					<a class="btn btn-primary btn-sm" href="modifica?id=@x.id">Modifica</a>
					<a class="btn btn-danger btn-sm" href="cancella?id=@x.id">Cancella</a>
				</td>
			</tr>
		}
	</table>
</div>
